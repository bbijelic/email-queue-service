#!/bin/bash

SERVICE_BASE=/projects/email-queue-service/assembly/target/service-1.0.0-SNAPSHOT/service-1.0.0-SNAPSHOT
SERVICE_PID=/projects/email-queue-service/assembly/target/service-1.0.0-SNAPSHOT/service-1.0.0-SNAPSHOT/run/service.pid
SERVICE_LOG=/projects/email-queue-service/assembly/target/service-1.0.0-SNAPSHOT/service-1.0.0-SNAPSHOT/logs/service.log
SERVICE_JAVA_OPTS="-Djava.security.egd=file:///dev/urandom -Duser.timezone=UTC"

if [ ! -d $SERVICE_BASE ] ; then
  echo "Path to service directory is not correct! Please set up SERVICE_BASE."
  exit 1
fi

if [ -z "${DOCKER}" ]; then
    # check if PID file exists
    if [ -f $SERVICE_PID ] ; then
      PID=`cat $SERVICE_PID`
      if [ `ps axf | grep ${PID} | grep -v grep | wc -l` -eq 0 ] ; then
        echo "Service is not running, but $SERVICE_PID exists."
        exit 1
      else
        echo "Service is already running."
        exit 1
      fi
    fi
else
    rm -f $SERVICE_PID
fi
 
echo -e "Starting service ... ";

# Start Service
java -noverify $SERVICE_JAVA_OPTS -cp '/projects/email-queue-service/assembly/target/service-1.0.0-SNAPSHOT/service-1.0.0-SNAPSHOT/config:/projects/email-queue-service/assembly/target/service-1.0.0-SNAPSHOT/service-1.0.0-SNAPSHOT/lib/*' com.github.bbijelic.service.email.EmailQueueService server /projects/email-queue-service/assembly/target/service-1.0.0-SNAPSHOT/service-1.0.0-SNAPSHOT/config/config.yml > $SERVICE_LOG &

# Store PID file
echo $! > $SERVICE_PID

echo -e "Service started with pid: $!";

exit 0